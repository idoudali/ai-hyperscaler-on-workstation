{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hyperscaler Cluster Configuration",
  "description": "Schema for the cluster.yaml file",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^1\\.0$"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["name", "description"]
    },
    "global": {
      "type": "object",
      "properties": {},
      "additionalProperties": true
    },
    "clusters": {
      "type": "object",
      "properties": {
        "hpc": { "$ref": "#/definitions/hpcCluster" },
        "cloud": { "$ref": "#/definitions/cloudCluster" }
      },
      "required": ["hpc", "cloud"]
    }
  },
  "required": ["version", "metadata", "clusters"],
  "definitions": {
    "baseImagePath": {
      "type": "string",
      "description": "Path to the base qcow2 image file. Can be absolute or relative to the current working directory.",
      "pattern": ".*\\.qcow2$"
    },
    "network": {
      "type": "object",
      "properties": {
        "subnet": { "type": "string", "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$" },
        "bridge": { "type": "string" }
      },
      "required": ["subnet", "bridge"]
    },

    "pciePassthrough": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": false },
        "devices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pci_address": { "type": "string", "pattern": "^[0-9a-fA-F]{4}:[0-9a-fA-F]{2}:[0-9a-fA-F]{2}\\.(?:[0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$" },
              "device_type": { "type": "string", "enum": ["gpu", "audio", "network", "storage", "other"] },
              "vendor_id": { "type": "string", "pattern": "^[0-9a-fA-F]{4}$" },
              "device_id": { "type": "string", "pattern": "^[0-9a-fA-F]{4}$" },
              "iommu_group": { "type": "integer", "minimum": 0 }
            },
            "required": ["pci_address", "device_type"]
          }
        }
      }
    },
    "virtioFsMount": {
      "type": "object",
      "description": "Virtio-FS host directory sharing mount configuration",
      "properties": {
        "tag": {
          "type": "string",
          "description": "Unique identifier for the mount (used in virtiofs protocol)",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "host_path": {
          "type": "string",
          "description": "Absolute path on the host to share"
        },
        "mount_point": {
          "type": "string",
          "description": "Mount point path inside the guest VM",
          "pattern": "^/.*$"
        },
        "readonly": {
          "type": "boolean",
          "description": "Mount as read-only",
          "default": false
        },
        "owner": {
          "type": "string",
          "description": "Owner user for mount point (default: admin)",
          "default": "admin"
        },
        "group": {
          "type": "string",
          "description": "Owner group for mount point (default: admin)",
          "default": "admin"
        },
        "mode": {
          "type": "string",
          "description": "Permissions mode (default: 0755)",
          "pattern": "^0[0-7]{3}$",
          "default": "0755"
        },
        "options": {
          "type": "string",
          "description": "Mount options (default: rw,relatime)",
          "default": "rw,relatime"
        }
      },
      "required": ["tag", "host_path", "mount_point"]
    },
    "virtioFsMounts": {
      "type": "array",
      "description": "List of virtio-fs host directory mounts",
      "items": { "$ref": "#/definitions/virtioFsMount" }
    },
    "hardwareAcceleration": {
      "type": "object",
      "properties": {
        "enable_kvm": { "type": "boolean", "default": true },
        "enable_nested": { "type": "boolean", "default": false },
        "cpu_model": {
          "type": "string",
          "enum": ["host", "host-passthrough", "host-model", "qemu64"],
          "default": "host-model"
        },
        "cpu_features": {
          "type": "array",
          "items": { "type": "string", "pattern": "^[+-]?[a-zA-Z0-9_.]+$" }
        },
        "numa_topology": {
          "type": ["object", "null"],
          "properties": {
            "nodes": { "type": "integer", "minimum": 1, "maximum": 8 },
            "memory_per_node": { "type": "integer", "minimum": 1024 }
          }
        },
        "cpu_topology": {
          "type": "object",
          "properties": {
            "sockets": { "type": "integer", "minimum": 1, "maximum": 4 },
            "cores": { "type": "integer", "minimum": 1, "maximum": 64 },
            "threads": { "type": "integer", "minimum": 1, "maximum": 2 }
          },
          "required": ["sockets", "cores", "threads"]
        },
        "performance": {
          "type": "object",
          "properties": {
            "enable_hugepages": { "type": "boolean", "default": false },
            "hugepage_size": { "type": "string", "enum": ["2M", "1G"], "default": "2M" },
            "cpu_pinning": { "type": "boolean", "default": false },
            "memory_backing": {
              "type": "string",
              "enum": ["default", "hugepages", "memfd"],
              "default": "default"
            }
          }
        }
      }
    },
    "hardwareConfig": {
      "type": "object",
      "properties": {
        "acceleration": { "$ref": "#/definitions/hardwareAcceleration" }
      }
    },
    "hpcCluster": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "base_image_path": {
          "$ref": "#/definitions/baseImagePath",
          "description": "Default base image path for all nodes in the cluster (can be overridden at node level)"
        },
        "network": { "$ref": "#/definitions/network" },
        "hardware": { "$ref": "#/definitions/hardwareConfig" },
        "controller": { "$ref": "#/definitions/controllerNode" },
        "compute_nodes": { "$ref": "#/definitions/computeNodeGroup" },
        "slurm_config": {
          "type": "object",
          "properties": {
            "partitions": { "type": "array", "items": { "type": "string" } },
            "default_partition": { "type": "string" },
            "max_job_time": { "type": "string" }
          },
          "required": ["partitions", "default_partition"]
        }
      },
      "required": ["network", "controller", "compute_nodes", "slurm_config", "name"]
    },
    "cloudCluster": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "base_image_path": {
          "$ref": "#/definitions/baseImagePath",
          "description": "Default base image path for all nodes in the cluster (can be overridden at node level)"
        },
        "network": { "$ref": "#/definitions/network" },
        "hardware": { "$ref": "#/definitions/hardwareConfig" },
        "control_plane": { "$ref": "#/definitions/controllerNode" },
        "worker_nodes": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/workerNode"
            }
          }
        },
        "kubernetes_config": {
          "type": "object",
          "properties": {
            "cni": { "type": "string" },
            "ingress": { "type": "string" },
            "storage_class": { "type": "string" }
          },
          "required": ["cni", "ingress", "storage_class"]
        }
      },
      "required": ["network", "control_plane", "worker_nodes", "kubernetes_config", "name"]
    },
    "controllerNode": {
      "type": "object",
      "properties": {
        "cpu_cores": { "type": "integer", "minimum": 1 },
        "memory_gb": { "type": "integer", "minimum": 1 },
        "disk_gb": { "type": "integer", "minimum": 10 },
        "ip_address": { "type": "string", "format": "ipv4" },
        "base_image_path": {
          "$ref": "#/definitions/baseImagePath",
          "description": "Override the cluster default base image path for this controller node"
        },
        "virtio_fs_mounts": {
          "$ref": "#/definitions/virtioFsMounts",
          "description": "Virtio-FS host directory sharing mounts for the controller"
        }
      },
      "required": ["cpu_cores", "memory_gb", "disk_gb", "ip_address"]
    },
    "VMSpec": {
      "type": "object",
      "properties": {
        "cpu_cores": { "type": "integer", "minimum": 1 },
        "memory_gb": { "type": "integer", "minimum": 1 },
        "disk_gb": { "type": "integer", "minimum": 10 },
        "pcie_passthrough": { "$ref": "#/definitions/pciePassthrough" },
        "virtio_fs_mounts": {
          "$ref": "#/definitions/virtioFsMounts",
          "description": "Virtio-FS host directory sharing mounts (optional)"
        },
        "base_image_path": {
          "$ref": "#/definitions/baseImagePath",
          "description": "Override the cluster default base image path for this VM"
        }
      },
      "required": ["cpu_cores", "memory_gb", "disk_gb"]
    },
    "VMDefinition": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/VMSpec" },
        {
          "type": "object",
          "properties": {
            "ip": {
              "oneOf": [
                { "type": "string", "format": "ipv4" },
                { "type": "string", "enum": ["DHCP"] }
              ]
            }
          },
          "required": ["ip"]
        }
      ]
    },
    "computeNodeGroup": {
      "oneOf": [
        {
          "type": "object",
          "allOf": [
            { "$ref": "#/definitions/VMSpec" },
            {
              "type": "object",
              "properties": {
                "count": { "type": "integer", "minimum": 1 },
                "ip": { "type": "string", "enum": ["DHCP"] }
              },
              "required": ["count", "ip"]
            }
          ]
        },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/VMDefinition" },
          "minItems": 1
        }
      ]
    },
    "workerNode": {
      "oneOf": [
        {
          "allOf": [
            { "$ref": "#/definitions/VMDefinition" },
            {
              "type": "object",
              "properties": {
                "worker_type": { "const": "cpu" }
              },
              "required": ["worker_type"]
            }
          ]
        },
        {
          "allOf": [
            { "$ref": "#/definitions/VMDefinition" },
            {
              "type": "object",
              "properties": {
                "worker_type": { "const": "gpu" }
              },
              "required": ["worker_type"]
            }
          ]
        }
      ]
    }
  }
}
