{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hyperscaler Cluster Configuration",
  "description": "Schema for the cluster.yaml file",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^1\\.0$"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["name", "description"]
    },
    "global": {
      "type": "object",
      "properties": {
        "gpu_allocation": {
          "type": "object",
          "properties": {
            "devices": {
              "type": "array",
              "items": { "$ref": "#/definitions/gpuDevice" }
            },
            "strategy": {
              "type": "string",
              "enum": ["mig", "whole", "hybrid"]
            },
            "mig_slices": {
              "type": "object",
              "properties": {
                "hpc": { "type": "integer", "minimum": 0 },
                "cloud": { "type": "integer", "minimum": 0 }
              }
            },
            "whole_gpus": {
              "type": "object",
              "properties": {
                "hpc": { "type": "integer", "minimum": 0 },
                "cloud": { "type": "integer", "minimum": 0 }
              }
            }
          },
          "required": ["strategy"]
        }
      },
      "required": ["gpu_allocation"]
    },
    "clusters": {
      "type": "object",
      "properties": {
        "hpc": { "$ref": "#/definitions/hpcCluster" },
        "cloud": { "$ref": "#/definitions/cloudCluster" }
      },
      "required": ["hpc", "cloud"]
    }
  },
  "required": ["version", "metadata", "global", "clusters"],
  "definitions": {
    "network": {
      "type": "object",
      "properties": {
        "subnet": { "type": "string", "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]{1,2}$" },
        "bridge": { "type": "string" }
      },
      "required": ["subnet", "bridge"]
    },
    "gpuDevice": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "pci_address": { "type": "string", "pattern": "^[0-9a-fA-F]{4}:[0-9a-fA-F]{2}:[0-9a-fA-F]{2}\\.[0-9]$" },
        "model": { "type": "string" },
        "mig_capable": { "type": "boolean" },
        "allowed_mig_profiles": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["id", "pci_address", "model", "mig_capable"]
    },
    "hpcCluster": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "network": { "$ref": "#/definitions/network" },
        "controller": { "$ref": "#/definitions/controllerNode" },
        "compute_nodes": { "$ref": "#/definitions/computeNodeGroup" },
        "slurm_config": {
          "type": "object",
          "properties": {
            "partitions": { "type": "array", "items": { "type": "string" } },
            "default_partition": { "type": "string" },
            "max_job_time": { "type": "string" }
          },
          "required": ["partitions", "default_partition"]
        }
      },
      "required": ["network", "controller", "compute_nodes", "slurm_config", "name"]
    },
    "cloudCluster": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "network": { "$ref": "#/definitions/network" },
        "control_plane": { "$ref": "#/definitions/controllerNode" },
        "worker_nodes": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/workerNode"
            }
          }
        },
        "kubernetes_config": {
          "type": "object",
          "properties": {
            "cni": { "type": "string" },
            "ingress": { "type": "string" },
            "storage_class": { "type": "string" }
          },
          "required": ["cni", "ingress", "storage_class"]
        }
      },
      "required": ["network", "control_plane", "worker_nodes", "kubernetes_config", "name"]
    },
    "controllerNode": {
      "type": "object",
      "properties": {
        "cpu_cores": { "type": "integer", "minimum": 1 },
        "memory_gb": { "type": "integer", "minimum": 1 },
        "disk_gb": { "type": "integer", "minimum": 10 },
        "ip_address": { "type": "string", "format": "ipv4" }
      },
      "required": ["cpu_cores", "memory_gb", "disk_gb", "ip_address"]
    },
    "VMSpec": {
      "type": "object",
      "properties": {
        "cpu_cores": { "type": "integer", "minimum": 1 },
        "memory_gb": { "type": "integer", "minimum": 1 },
        "disk_gb": { "type": "integer", "minimum": 10 },
        "gpu_assigned": { "type": "string" }
      },
      "required": ["cpu_cores", "memory_gb", "disk_gb"]
    },
    "VMDefinition": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/VMSpec" },
        {
          "type": "object",
          "properties": {
            "ip": {
              "oneOf": [
                { "type": "string", "format": "ipv4" },
                { "type": "string", "enum": ["DHCP"] }
              ]
            }
          },
          "required": ["ip"]
        }
      ]
    },
    "computeNodeGroup": {
      "oneOf": [
        {
          "type": "object",
          "allOf": [
            { "$ref": "#/definitions/VMSpec" },
            {
              "type": "object",
              "properties": {
                "count": { "type": "integer", "minimum": 1 },
                "ip": { "type": "string", "enum": ["DHCP"] }
              },
              "required": ["count", "ip"]
            }
          ]
        },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/VMDefinition" },
          "minItems": 1
        }
      ]
    },
    "workerNode": {
      "oneOf": [
        {
          "allOf": [
            { "$ref": "#/definitions/VMDefinition" },
            {
              "type": "object",
              "properties": {
                "worker_type": { "const": "cpu" }
              },
              "required": ["worker_type"],
              "not": { "required": ["gpu_assigned"] }
            }
          ]
        },
        {
          "allOf": [
            { "$ref": "#/definitions/VMDefinition" },
            {
              "type": "object",
              "properties": {
                "worker_type": { "const": "gpu" },
                "gpu_assigned": { "type": "string" }
              },
              "required": ["worker_type", "gpu_assigned"]
            }
          ]
        }
      ]
    }
  }
}
