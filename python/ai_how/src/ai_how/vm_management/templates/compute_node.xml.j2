<domain type='kvm'>
  <name>{{ vm_name }}</name>
  <uuid>{{ vm_uuid | default('') }}</uuid>
  <memory unit='GiB'>{{ memory_gb }}</memory>
  <currentMemory unit='GiB'>{{ memory_gb }}</currentMemory>
  <vcpu placement='static'>{{ cpu_cores }}</vcpu>

  {% if hardware.get('use_hugepages', false) %}
  <memoryBacking>
    <hugepages>
      {% if hardware.get('hugepage_size_gb') %}
      <page size='{{ hardware.get('hugepage_size_gb') }}' unit='GiB'/>
      {% endif %}
    </hugepages>
    <access mode='shared'/>
  </memoryBacking>
  {% endif %}


  <os>
    <type arch='x86_64' machine='q35'>hvm</type>
    <boot dev='hd'/>
  </os>

  <features>
    <acpi/>
    <apic/>
    <vmport state='off'/>
    <hyperv>
      <relaxed state='on'/>
      <vapic state='on'/>
      <spinlocks state='on' retries='8191'/>
      <vendor_id state='on' value='kvm hyperv'/>
    </hyperv>
    <kvm>
      <hidden state='on'/>
    </kvm>
    <ioapic driver='qemu'/>
    <smm state='on'/>
  </features>

  <cpu mode='host-passthrough'>
    <topology sockets='1' cores='{{ cpu_cores }}' threads='1'/>
    <feature policy='disable' name='hypervisor'/>
    <feature policy='require' name='topoext'/>
    <feature policy='disable' name='la57'/>
  </cpu>

  <clock offset='utc'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='no'/>
  </clock>

  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>

  <!-- QEMU arguments to exactly match working script -->
  {% if hardware.get('large_memory_bar_support', true) %}
  <qemu:commandline xmlns:qemu='http://libvirt.org/schemas/domain/qemu/1.0'>
    <qemu:arg value='-mem-prealloc'/>
    <qemu:arg value='-overcommit'/>
    <qemu:arg value='mem-lock=off'/>
    <qemu:arg value='-global'/>
    <qemu:arg value='PIIX4_PM.disable_s3=1'/>
    <qemu:arg value='-global'/>
    <qemu:arg value='PIIX4_PM.disable_s4=1'/>
    <qemu:arg value='-global'/>
    <qemu:arg value='ICH9-LPC.disable_s3=1'/>
    <qemu:arg value='-global'/>
    <qemu:arg value='ICH9-LPC.disable_s4=1'/>
  </qemu:commandline>
  {% endif %}

  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>

    <!-- Primary disk -->
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='{{ disk_path }}'/>
      <target dev='vda' bus='virtio'/>
    </disk>

    <!-- Network interface -->
    <interface type='network'>
      <source network='{{ cluster_name }}-network'/>
      <model type='virtio'/>
      {% if mac_address %}
      <mac address='{{ mac_address }}'/>
      {% endif %}
    </interface>

    <!-- Basic controllers -->
    <controller type='usb' index='0' model='qemu-xhci'/>
    <controller type='pci' index='0' model='pcie-root'/>

    <!-- GPU Passthrough -->
    {% if pcie_passthrough and pcie_passthrough.get('enabled') and pcie_passthrough.get('devices') %}
    {% for device in pcie_passthrough['devices'] %}
      {% if device.get('device_type') == 'gpu' %}
    <hostdev mode='subsystem' type='pci' managed='yes'>
      {% if hardware.get('vfio_no_mmap', false) %}
      <driver name='vfio' x-no-mmap='on'/>
      {% endif %}
      <source>
        <address domain='0x{{ device['pci_address'].split(":")[0] }}'
                 bus='0x{{ device['pci_address'].split(":")[1] }}'
                 slot='0x{{ device['pci_address'].split(":")[2].split(".")[0] }}'
                 function='0x{{ device['pci_address'].split(":")[2].split(".")[1] }}'/>
      </source>
    </hostdev>
      {% endif %}
    {% endfor %}
    {% endif %}

    <!-- Console access with trace folder logging -->
    <!-- Primary serial console with file logging to trace folder -->
    <serial type='file'>
      <source path='{{ trace_folder }}/{{ vm_name }}-serial.log'/>
      <target type='isa-serial' port='0'/>
    </serial>

    <!-- PTY console for virsh console (fallback) -->
    <serial type='pty'>
      <target type='isa-serial' port='1'/>
    </serial>

    <!-- Console mapped to first serial port -->
    <console type='file'>
      <source path='{{ trace_folder }}/{{ vm_name }}-console.log'/>
      <target type='serial' port='0'/>
    </console>

    <!-- Graphics (only if no GPU passthrough) -->
    {% set gpu_devices = [] %}
    {% if pcie_passthrough and pcie_passthrough.get('enabled') and pcie_passthrough.get('devices') %}
      {% for device in pcie_passthrough['devices'] %}
        {% if device.get('device_type') == 'gpu' %}
          {% set _ = gpu_devices.append(device) %}
        {% endif %}
      {% endfor %}
    {% endif %}
    {% set has_gpu_passthrough = gpu_devices|length > 0 %}

    {% if not has_gpu_passthrough %}
    <graphics type='vnc' port='-1' autoport='yes' listen='127.0.0.1'/>
    <video>
      <model type='qxl'/>
    </video>
    {% endif %}

    <!-- Essential devices -->
    <input type='keyboard' bus='ps2'/>
    <input type='mouse' bus='ps2'/>
    <memballoon model='none'/>
    <rng model='virtio'>
      <backend model='random'>/dev/urandom</backend>
    </rng>
  </devices>
</domain>
