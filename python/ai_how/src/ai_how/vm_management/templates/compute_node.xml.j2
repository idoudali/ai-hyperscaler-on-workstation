<domain type='kvm'>
  <name>{{ vm_name }}</name>
  <uuid>{{ vm_uuid | default('') }}</uuid>
  <memory unit='GiB'>{{ memory_gb }}</memory>
  <currentMemory unit='GiB'>{{ memory_gb }}</currentMemory>
  <vcpu placement='static'>{{ cpu_cores }}</vcpu>

  <os>
    <type arch='x86_64' machine='q35'>hvm</type>
    <boot dev='hd'/>
  </os>

  <features>
    <acpi/>
    <apic/>
    <vmport state='off'/>
    <kvm>
      <hidden state='on'/>
    </kvm>
    <!-- Add IOMMU support for better passthrough -->
    <ioapic driver='qemu'/>
  </features>

  <cpu mode='host-passthrough'>
    <topology sockets='1' cores='{{ cpu_cores }}' threads='1'/>
    <!-- Only enable vmx for Intel systems, remove svm requirement -->
    <feature policy='require' name='vmx'/>
    <!-- Remove svm requirement as it causes issues on Intel systems -->
    <!-- <feature policy='require' name='svm'/> -->
  </cpu>

  <clock offset='utc'>
    <timer name='rtc' tickpolicy='catchup'/>
    <timer name='pit' tickpolicy='delay'/>
    <timer name='hpet' present='no'/>
  </clock>

  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>

  <devices>
    <emulator>/usr/bin/qemu-system-x86_64</emulator>

    <!-- Primary disk -->
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='{{ disk_path }}'/>
      <target dev='vda' bus='virtio'/>
    </disk>

    <!-- Network interface -->
    <interface type='network'>
      <source network='{{ cluster_name }}-network'/>
      <model type='virtio'/>
      {% if mac_address %}
      <mac address='{{ mac_address }}'/>
      {% endif %}
    </interface>

    <!-- Basic controllers -->
    <controller type='usb' index='0' model='qemu-xhci'/>
    <controller type='pci' index='0' model='pcie-root'/>

    <!-- Add IOMMU device for better passthrough support -->
    <iommu model='intel'>
      <driver intremap='on' caching_mode='on'/>
    </iommu>

    <!-- PCIe Device Passthrough (GPU, Audio, etc.) -->
    {% if pcie_passthrough and pcie_passthrough.get('enabled') and pcie_passthrough.get('devices') %}
    <!-- Group devices by IOMMU group to ensure proper addressing -->
    {% set iommu_groups = {} %}
    {% for device in pcie_passthrough['devices'] %}
      {% if device.get('device_type') in ['gpu', 'audio'] and device.get('iommu_group') %}
        {% set group_id = device.get('iommu_group') %}
        {% if group_id not in iommu_groups %}
          {% set _ = iommu_groups.update({group_id: []}) %}
        {% endif %}
        {% set _ = iommu_groups[group_id].append(device) %}
      {% endif %}
    {% endfor %}

    <!-- Create PCI bridges for each IOMMU group -->
    {% set controller_index = 1 %}
    {% for group_id, devices in iommu_groups.items() %}
    <!-- Add pcie-root-port first (required for Q35) -->
    <controller type='pci' index='{{ controller_index }}' model='pcie-root-port'>
      <model name='pcie-root-port'/>
      <target chassis='{{ controller_index }}' port='0x{{ "%x" | format(controller_index + 7) }}'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x{{ "%02x" | format(controller_index + 7) }}' function='0x0'/>
    </controller>
    <!-- Then add pcie-to-pci-bridge connected to the root port -->
    <controller type='pci' index='{{ controller_index + 10 }}' model='pcie-to-pci-bridge'>
      <model name='pcie-pci-bridge'/>
      <address type='pci' domain='0x0000' bus='0x{{ "%02x" | format(controller_index) }}' slot='0x00' function='0x0'/>
    </controller>
    {% set controller_index = controller_index + 1 %}
    {% endfor %}

    <!-- Pass through devices grouped by IOMMU group -->
    {% set device_controller_index = 1 %}
    {% for group_id, devices in iommu_groups.items() %}
      {% for device in devices %}
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x{{ device['pci_address'].split(":")[0] }}'
                 bus='0x{{ device['pci_address'].split(":")[1] }}'
                 slot='0x{{ device['pci_address'].split(":")[2].split(".")[0] }}'
                 function='0x{{ device['pci_address'].split(":")[2].split(".")[1] }}'/>
      </source>
      <!-- Assign devices from the same IOMMU group to the same virtual PCI controller -->
      <!-- Use configurable slot numbers (slot 0 is reserved, must be >= 1) -->
      <address type='pci' domain='0x0000'
               bus='0x{{ "%02x" | format(device_controller_index + 10) }}'
               slot='{{ device.get("virtual_slot", "0x01") }}'
               function='0x{{ device['pci_address'].split(":")[2].split(".")[1] }}'/>
      <!-- {{ device.get('device_type', 'unknown').title() }} Device: {{ device['pci_address'] }} (IOMMU Group {{ group_id }}) -->
    </hostdev>
      {% endfor %}
      {% set device_controller_index = device_controller_index + 1 %}
    {% endfor %}

    <!-- Handle devices without IOMMU group specified (fallback) -->
    {% for device in pcie_passthrough['devices'] %}
      {% if device.get('device_type') in ['gpu', 'audio'] and not device.get('iommu_group') %}
    <hostdev mode='subsystem' type='pci' managed='yes'>
      <source>
        <address domain='0x{{ device['pci_address'].split(":")[0] }}'
                 bus='0x{{ device['pci_address'].split(":")[1] }}'
                 slot='0x{{ device['pci_address'].split(":")[2].split(".")[0] }}'
                 function='0x{{ device['pci_address'].split(":")[2].split(".")[1] }}'/>
      </source>
      <!-- Let QEMU auto-assign addresses for devices without IOMMU group info -->
      <!-- {{ device.get('device_type', 'unknown').title() }} Device: {{ device['pci_address'] }} (Auto-assigned) -->
    </hostdev>
      {% endif %}
    {% endfor %}
    {% endif %}

    <!-- Console access -->
    <serial type='pty'>
      <target type='isa-serial' port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>

    <!-- Graphics (only if no GPU passthrough) -->
    {% set gpu_devices = [] %}
    {% if pcie_passthrough and pcie_passthrough.get('enabled') and pcie_passthrough.get('devices') %}
      {% for device in pcie_passthrough['devices'] %}
        {% if device.get('device_type') == 'gpu' %}
          {% set _ = gpu_devices.append(device) %}
        {% endif %}
      {% endfor %}
    {% endif %}
    {% set has_gpu_passthrough = gpu_devices|length > 0 %}

    {% if not has_gpu_passthrough %}
    <graphics type='vnc' port='-1' autoport='yes' listen='127.0.0.1'/>
    <video>
      <model type='qxl'/>
    </video>
    {% endif %}

    <!-- Essential devices -->
    <input type='keyboard' bus='ps2'/>
    <input type='mouse' bus='ps2'/>
    <memballoon model='virtio'/>
    <rng model='virtio'>
      <backend model='random'>/dev/urandom</backend>
    </rng>
  </devices>
</domain>
