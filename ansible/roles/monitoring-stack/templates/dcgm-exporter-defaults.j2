# DCGM Exporter Default Configuration
# Generated by Ansible monitoring-stack role

# Exporter listen address
DCGM_EXPORTER_LISTEN_ADDRESS="{{ dcgm_exporter_listen_address }}"

# Exporter port
DCGM_EXPORTER_PORT="{{ dcgm_exporter_port }}"

# Collectors to enable (comma-separated)
# Available: dcgm, nvml
DCGM_EXPORTER_COLLECTORS="{{ dcgm_exporter_collectors }}"

# Remote DCGM host engine connection (optional)
{% if dcgm_exporter_remote_host %}
DCGM_EXPORTER_REMOTE_HOST="{{ dcgm_exporter_remote_host }}"
{% else %}
# DCGM_EXPORTER_REMOTE_HOST=""
{% endif %}

# Kubernetes mode (true/false)
DCGM_EXPORTER_KUBERNETES="{{ dcgm_exporter_kubernetes_mode | lower }}"

# GPU device list (optional, comma-separated GPU indices)
# Leave empty to monitor all GPUs
{% if dcgm_exporter_gpu_devices %}
DCGM_EXPORTER_GPU_DEVICES="{{ dcgm_exporter_gpu_devices | join(',') }}"
{% else %}
# DCGM_EXPORTER_GPU_DEVICES=""
{% endif %}

# Enable verbose logging
DCGM_EXPORTER_VERBOSE="{{ dcgm_exporter_verbose | lower }}"

# Log level (debug, info, warn, error)
DCGM_EXPORTER_LOG_LEVEL="{{ dcgm_exporter_log_level }}"

# Fields configuration file (optional)
{% if dcgm_exporter_fields_config %}
DCGM_EXPORTER_FIELDS_CONFIG="{{ dcgm_exporter_fields_config }}"
{% else %}
# DCGM_EXPORTER_FIELDS_CONFIG=""
{% endif %}
