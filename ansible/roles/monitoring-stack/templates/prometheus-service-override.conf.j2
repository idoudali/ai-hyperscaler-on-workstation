# Prometheus service override configuration
# Generated by Ansible monitoring-stack role

[Service]
ExecStart=
ExecStart=/usr/bin/prometheus \
  --config.file={{ prometheus_config_dir }}/prometheus.yml \
  --storage.tsdb.path={{ prometheus_data_dir }} \
  --web.console.templates=/etc/prometheus/consoles \
  --web.console.libraries=/etc/prometheus/console_libraries \
  --web.listen-address={{ prometheus_web_listen_address }} \
  --web.enable-lifecycle \
  --storage.tsdb.retention.time={{ prometheus_storage_retention }} \
{% if prometheus_storage_retention_size != "0" %}
  --storage.tsdb.retention.size={{ prometheus_storage_retention_size }} \
{% endif %}
  --web.external-url=http://{{ ansible_default_ipv4.address }}:9090/

User={{ prometheus_user }}
Group={{ prometheus_group }}

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectHome=true
ProtectSystem=strict
ReadWritePaths={{ prometheus_data_dir }}
ReadWritePaths={{ prometheus_config_dir }}

# Resource limits
LimitNOFILE=65535
LimitNPROC=65535

[Install]
WantedBy=multi-user.target
