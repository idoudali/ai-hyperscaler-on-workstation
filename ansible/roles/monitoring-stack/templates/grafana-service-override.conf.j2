# Grafana service override configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

[Service]
# User and group
User={{ grafana_user }}
Group={{ grafana_group }}

# Environment
Environment=GRAFANA_HOME={{ grafana_data_dir }}
Environment=GRAFANA_CONFIG={{ grafana_config_dir }}/grafana.ini

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ grafana_data_dir }} {{ grafana_logs_dir }}
PrivateDevices=true

# Resource limits
LimitNOFILE=65536
MemoryMax=512M

# Restart policy
Restart=always
RestartSec=5
