# BeeGFS Management Service Configuration (BeeGFS 8.1.0+)
# Managed by Ansible - Do not edit manually

# Management database file location
db-file = "{{ beegfs_mgmt_storage_directory }}/mgmtd.sqlite"

# Logging configuration
log-target = "stderr"
log-level = "{{ ['error', 'warn', 'info', 'debug', 'trace'][beegfs_mgmt_log_level - 1] if beegfs_mgmt_log_level <= 5 else 'warn' }}"

# Connection settings
beemsg-port = {{ beegfs_mgmt_port }}
grpc-port = {{ beegfs_mgmt_port | int + 2 }}

# Network interfaces (use default interface if not specified)
{% if beegfs_mgmt_interfaces is defined and beegfs_mgmt_interfaces %}
interfaces = [{% for interface in (beegfs_mgmt_interfaces if beegfs_mgmt_interfaces is iterable and beegfs_mgmt_interfaces is not string else [beegfs_mgmt_interfaces]) %}"{{ interface }}"{% if not loop.last %}, {% endif %}{% endfor %}]
{% endif %}

# Authentication (disabled by default for development)
auth-disable = true

# General settings
registration-disable = false
node-offline-timeout = "180s"
client-auto-remove-timeout = "30m"

# License settings (disabled for open source)
license-disable = true

# TLS settings (disabled for development)
tls-disable = true

# Quota settings (disabled by default)
quota-enable = false
quota-enforce = false
