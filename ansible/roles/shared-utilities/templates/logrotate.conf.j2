# Logrotate configuration for {{ log_directory | basename }}
# Generated by shared-utilities role

{{ log_directory }}/*.log {
    daily
    rotate {{ log_rotate_count | default(7) }}
    size {{ log_max_size | default('100M') }}
    compress
    delaycompress
    missingok
    notifempty
    create {{ log_mode | default('0644') }} {{ log_owner | default('root') }} {{ log_group | default('root') }}
    sharedscripts
    postrotate
        # Reload service if needed (override in role using this)
        # systemctl reload {{ service_name | default('') }}
    endscript
}
